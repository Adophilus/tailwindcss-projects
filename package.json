{
  "dependencies": {
    "tailwindcss": "^3.0.24"
  },
  "scripts": {
    "bookmarker:serve": "live-server ./public/bookmarker --watch public/bookmarker/*{.html,.css} --no-browser",
    "bookmarker:build": "tailwindcss build --input src/bookmarker/style.css --output public/bookmarker/style.css",
    "bookmarker:watch": "tailwindcss build --input src/bookmarker/style.css --output public/bookmarker/style.css --watch"
  },
  "name": "tailwindcss-project",
  "version": "1.0.0",
  "description": "A simple project to learn tailwindcss",
  "main": "index.js",
  "author": "Adophilus",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.1",
    "nodemon": "^2.0.15"
  }
}
